<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="simple" targetRuntime="MyBatis3Simple">


        <!--生成的java文件编码格式-->
        <property name="javaFileEncoding" value="UTF-8"/>
        <!--覆盖生成的Mapper-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin"/>

        <!--注释生成器-->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>



        <!--数据库连接配置-->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/Cinema_Ticket"
                        userId="root" password="root"/>

        <!--生成entity/domain对象-->
        <javaModelGenerator targetPackage="com.juwuhe.entity" targetProject="src/main/java"/>

        <!--生成mapper文件-->
        <sqlMapGenerator targetPackage="mappers" targetProject="src/main/resources"/>

        <!--生成mapper接口/dao接口-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.juwuhe.dao" targetProject="src/main/java"/>

        <!--对应表名-->
        <table tableName="paly"/>
    </context>
</generatorConfiguration>